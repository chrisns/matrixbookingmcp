{
  "name": "matrix-booking-mcp-server",
  "version": "2.0.0",
  "description": "TypeScript MCP server for Matrix Booking API integration with comprehensive room/desk booking, colleague discovery, and natural language search capabilities",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisns/matrixbookingmcp.git"
  },
  "homepage": "https://github.com/chrisns/matrixbookingmcp",
  "bugs": {
    "url": "https://github.com/chrisns/matrixbookingmcp/issues"
  },
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "matrix-booking-mcp": "tsx ./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:claude-code": "node example_calls/test_claude_code_client.js",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:performance": "vitest --run tests/performance/ --testTimeout=15000",
    "test:performance:watch": "vitest tests/performance/ --testTimeout=15000",
    "test:performance:coverage": "vitest --coverage tests/performance/ --testTimeout=15000",
    "test:k6": "k6 run tests/performance/load-test.js",
    "test:k6:timeout": "k6 run tests/performance/timeout-test.js",
    "test:k6:quick": "k6 run --duration 30s --vus 5 tests/performance/load-test.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "matrix-booking",
    "typescript",
    "booking",
    "availability"
  ],
  "author": "Matrix Booking MCP Server",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.5",
    "dotenv": "^17.0.0",
    "tsx": "^4.19.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.98",
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "msw": "^2.8.6",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}